#!/bin/bash
read -p "Would you like to shutdown? (y/n)?" CONT
if [ "$CONT" = "y" ]; then
	echo "BYE";
	sudo /sbin/shutdown -r now;
else
	 echo "OK NO SLEEP";
fi

